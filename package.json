{
	"name": "devclock",
	"type": "commonjs",
	"displayName": "devclock",
	"description": "",
	"version": "0.0.4",
	"engines": {
		"vscode": "^1.95.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"panel": [
				{
					"id": "devclock-details",
					"title": "devclock",
					"icon": "$(clock)"
				}
			]
		},
		"views": {
			"devclock-details": [
				{
					"type": "webview",
					"id": "devclock.sessionDetails",
					"name": "Session Details"
				}
			]
		},
		"configuration": {
			"title": "DevClock",
			"properties": {
				"devclock.config.npmPath": {
					"type": "string",
					"default": "npm",
					"description": "Path to the npm executable."
				},
				"devclock.config.debugMode": {
					"type": "boolean",
					"default": true,
					"description": "Debug Debug Debug baby."
				},
				"devclock.config.syncTimeScale": {
					"type": "string",
					"enum": [
						"1 minute",
						"5 minutes",
						"10 minutes",
						"30 minutes",
						"1 hour"
					],
					"default": "5 minutes",
					"description": "Interval for syncing session data to local storage."
				},
				"devclock.config.idleThreshold": {
					"type": "string",
					"enum": [
						"15 minutes",
						"30 minutes",
						"1 hour"
					],
					"default": "15 minutes",
					"description": "Threshold for transitioning to idle state."
				},
				"devclock.interface.showTimer": {
					"type": "boolean",
					"default": true,
					"description": "Show the timer in the status bar."
				},
				"devclock.interface.timerAlignment": {
					"type": "string",
					"enum": [
						"Left",
						"Right"
					],
					"default": "Left",
					"description": "Alignment of the timer in the status bar, if visible."
				}
			}
		},
		"commands": [
			{
				"command": "devclock.execDebug",
				"title": "devclock execDebug"
			},
			{
				"command": "devclock.showDashboard",
				"title": "Show Devclock Dashboard"
			},
			{
				"command": "devclock.showSessionDetails",
				"title": "Show Session Details",
				"category": "Devclock"
			},
			{
				"command": "devclock.deactivate",
				"title": "Deactivate Devclock"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "node esbuild.js --production",
		"dev": "node esbuild.js",
		"watch": "node esbuild.js --watch",
		"package": "npm run check-types && node esbuild.js --production",
		"check-types": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.9",
		"@types/node": "20.x",
		"@types/vscode": "^1.95.0",
		"@types/vscode-webview": "^1.57.5",
		"@typescript-eslint/eslint-plugin": "^8.10.0",
		"@typescript-eslint/parser": "^8.7.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.24.0",
		"eslint": "^9.13.0",
		"glob": "^8.1.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.6.3"
	},
	"dependencies": {
		"npm-run-script": "^0.0.4",
		"simple-git": "^3.27.0"
	}
}
